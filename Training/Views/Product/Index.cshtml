                *@
                <th>
                    @_SharedResource[SharedResourcesKey.Actions]
                </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
@*            <td><img src="@item.PathFile" alt="No File" width="100" height="100" class="img-thumbnail" /></td>
*@            <td>
                        @Html.ActionLink( @_SharedResource[SharedResourcesKey.Edit], "Update", new {  id=item.Id  }) |
