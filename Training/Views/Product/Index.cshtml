@model IEnumerable<Training.Models.ViewModel.GetProducts>
@using Microsoft.Extensions.Localization;
@using Training.Resources;
@inject IStringLocalizer<SharedResources> _SharedResource
@{
    ViewData["Title"] = "Index";
}
<partial name="_ToastrpartialView">

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                    @_SharedResource[SharedResourcesKey.Id]
                </th>
            <th>
                    @_SharedResource[SharedResourcesKey.Name]
                </th>
            <th>
               @* @Html.DisplayNameFor(model => model.Price)*@
               @_SharedResource[SharedResourcesKey.Price]
            </th>
